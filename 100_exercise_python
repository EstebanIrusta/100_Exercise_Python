#1.4
num1 = int(input('Ingrese un numero'))
num2 = int(input('Ingrese un numero'))
if num2 != 0:
    print(f'{num1} + {num2} = {num1 + num2}')
    print(f'{num1} - {num2} = {num1 - num2}')
    print(f'{num1} * {num2} = {num1 * num2}')
    print(f'{num1} // {num2} = {num1 // num2}')
else:
    print('no puede realizarse la operacion')

