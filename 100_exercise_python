#1.30
horas_trabajadas = int(input('ingresa las horas trabajdas'))
valor_por_hora = int(input('ingresa el valor por hora'))
pago = horas_trabajadas*valor_por_hora
if horas_trabajadas >= 40:
    print(f'tu tarifa se incrementa un 50% por hacer hs extra:${pago*1.50}')
else:
    print(f'tu tarifa sigue igual por no hacer hs extra ${pago}')

#1.31
num1 = int(input('ingresa un valor'))
num2 = int(input('ingresa un valor'))

print('num1 = ', num1)
print('num2 =', num2)
intercambio = num1
num1 = num2
num2 = intercambio

print('num1 =', num1)
print('num2 =', num2)

#1.32
lado1 = int(input('ingresa un lado'))
lado2 = int(input('ingresa un lado'))
lado3 = int(input('ingresa un lado'))

if lado1 + lado2 > lado3 and lado1 + lado3 > lado2 and lado2 + lado3 > lado1:
    print('es un triangulo')

    if lado1 == lado2 and lado2 == lado3:
        print('es equilatero')
    elif lado1 != lado2 and lado1 != lado3 and lado2 != lado3:
        print('es escaleno')
    elif lado1 == lado2 or  lado1 == lado3 or lado2== lado3:
        print('es isoceles')
else:
    print('no es un triangulo')

#1.33
nombre = input('ingrese su nombre')
antiguedad = int(input('ingrese su antiguedad en a単os'))
cant_hs_trabajadas = int(input('ingrese cantidad de horas trabajadas'))
valor_hora = int(input('cual es el valor hora de trabajo'))
subtotal = cant_hs_trabajadas*valor_hora
calculo = subtotal + antiguedad*30
calculo_descuento = 0.13*calculo
calculo_descuento2 = calculo-calculo_descuento

print('RECIBO DEL EMPLEADO:')
print('nombre del empleado:',nombre)
print('antiguedad del empleado', antiguedad)
print('el valor hora es',valor_hora)
print('total a cobrar bruto', subtotal)
print('el total de descuento es',calculo_descuento)
print('el valor neto a cobrar es', calculo_descuento2)
